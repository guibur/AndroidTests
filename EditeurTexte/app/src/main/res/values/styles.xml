<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BigButton" parent="NormalText">
        <item name="android:padding">0dp</item>
    </style>
    <style name="StyleButton" parent="BigButton">
        <item name="android:background">@drawable/selector</item>
    </style>
    <style name="HideShowButton" parent="BigButton">
        <item name="android:background">@drawable/green_square</item>
    </style>

</resources>
