<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexe" />

    <ListView
        android:id="@+id/list_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@id/titre_sexe" />
    <TextView
        android:id="@+id/titre_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_sexe"
        android:text="Languages que vous connaissez :"/>
    <ListView
        android:id="@+id/list_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice"
        android:layout_below="@id/titre_language" />
    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"/>
</RelativeLayout>